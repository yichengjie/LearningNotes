<?xml version = "1.0" encoding = "UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="newsBean" class="com.yicj.lookup2.entity.FXNewsBean" scope="prototype" />

    <bean id="mockPersister" class="com.yicj.lookup2.service.impl.MockNewsPersister">
        <!--使用property得到的对象是单例，每次都是同一个-->
        <!--<property name="newsBean" ref="newsBean" />-->
        <!--使用方法仅在调用方法时返回新对象，类中属性newsBean一直未null，因为没地方给赋值-->
        <lookup-method name="getNewsBean" bean="newsBean" />
    </bean>
</beans>


